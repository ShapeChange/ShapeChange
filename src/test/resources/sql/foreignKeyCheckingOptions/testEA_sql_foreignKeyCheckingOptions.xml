<?xml version="1.0" encoding="UTF-8"?>
<ShapeChangeConfiguration
	xmlns="http://www.interactive-instruments.de/ShapeChange/Configuration/1.1"
	xmlns:sc="http://www.interactive-instruments.de/ShapeChange/Configuration/1.1"
	xmlns:xi="http://www.w3.org/2001/XInclude" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.interactive-instruments.de/ShapeChange/Configuration/1.1 src/main/resources/schema/ShapeChangeConfiguration.xsd">
	<input>
		<parameter name="inputModelType" value="EA7" />
		<parameter name="inputFile"
			value="src/test/resources/sql/foreignKeyCheckingOptions/test_sql_foreignKeyCheckingOptions.qea" />
		<parameter name="appSchemaNameRegex" value="Test Schema" />
		<parameter name="sortedSchemaOutput" value="true" />
		<parameter name="extractSeparator" value="--" />
		<descriptorSources>
			<DescriptorSource descriptor="documentation" source="ea:notes" />
			<DescriptorSource descriptor="alias" source="ea:alias" />
			<DescriptorSource descriptor="definition" source="sc:extract"
				token="Definition" />
			<DescriptorSource descriptor="description" source="sc:extract"
				token="Description" />
			<DescriptorSource descriptor="example" source="none" />
			<DescriptorSource descriptor="legalBasis" source="none" />
			<DescriptorSource descriptor="dataCaptureStatement"
				source="none" />
			<DescriptorSource descriptor="language" source="none" />
			<DescriptorSource descriptor="globalIdentifier"
				source="none" />
		</descriptorSources>
		<xi:include href="src/main/resources/config/StandardAliases.xml" />
	</input>
	<log>
		<parameter name="reportLevel" value="INFO" />
		<parameter name="logFile"
			value="testResults/sql/foreignKeyCheckingOptions/log_sql.xml" />
	</log>
	<targets>
		<Target class="de.interactive_instruments.ShapeChange.Target.SQL.SqlDdl"
			mode="enabled">
			<targetParameter name="databaseSystem" value="PostgreSQL" />
			<targetParameter name="defaultEncodingRule" value="customRule" />
			<targetParameter name="outputDirectory"
				value="testResults/sql/foreignKeyCheckingOptions/postgresql" />
			<targetParameter name="outputFilename" value="ddl_postgresql" />
			<targetParameter name="size" value="-1" />
			<targetParameter name="srid" value="4979" />
			<targetParameter name="createReferences" value="true" />
			<targetParameter name="foreignKeyColumnSuffix" value="_fk" />
			<targetParameter name="foreignKeyColumnDatatype" value="bigint" />
			<targetParameter name="dbOwner" value="public" />
			
			<!-- Since foreignKeyDeferrable=false, foreignKeyInitialConstraintMode won't have any effect -->
			<targetParameter name="foreignKeyDeferrable" value="false"/>
			<targetParameter name="foreignKeyInitialConstraintMode" value="deferred"/>
			
			<rules>
				<EncodingRule name="customRule" extends="sql">
					<rule name="rule-sql-all-associativetables"/>
					<rule name="rule-sql-cls-data-types"/>
					<rule name="rule-sql-cls-object-types"/>
					<rule name="rule-sql-cls-code-lists"/>
					<rule name="rule-sql-cls-data-types-oneToMany-severalTables"/>
				</EncodingRule>
			</rules>
			<xi:include
				href="src/main/resources/config/StandardSqlMapEntries-PostgreSQL.xml" />
		</Target>

		<Target class="de.interactive_instruments.ShapeChange.Target.SQL.SqlDdl"
			mode="enabled">
			<targetParameter name="databaseSystem" value="SQLServer" />
			<targetParameter name="defaultEncodingRule" value="customRule" />
			<targetParameter name="outputDirectory"
				value="testResults/sql/foreignKeyCheckingOptions/ddl_sqlserver" />
			<targetParameter name="outputFilename" value="ddl_sqlserver" />
			<targetParameter name="size" value="-1" />
			<targetParameter name="srid" value="4979" />
			<targetParameter name="createReferences" value="true" />
			<targetParameter name="foreignKeyColumnSuffix" value="_fk" />
			<targetParameter name="dbOwner" value="dbo" />
			
			<!-- WITHOUT EFFECT SINCE SQL SERVER DOES NOT SUPPORT THIS -->
			<targetParameter name="foreignKeyDeferrable" value="true"/>
			<targetParameter name="foreignKeyInitialConstraintMode" value="deferred"/>
			
			<rules>
				<EncodingRule name="customRule" extends="sql">
					<rule name="rule-sql-all-associativetables"/>
					<rule name="rule-sql-cls-data-types"/>
					<rule name="rule-sql-cls-object-types"/>
					<rule name="rule-sql-cls-code-lists"/>
					<rule name="rule-sql-cls-data-types-oneToMany-severalTables"/>
				</EncodingRule>
			</rules>
			<xi:include
				href="src/main/resources/config/StandardSqlMapEntries-SQLServer.xml" />
		</Target>

		<Target class="de.interactive_instruments.ShapeChange.Target.SQL.SqlDdl"
			mode="enabled">
			<targetParameter name="databaseSystem" value="Oracle" />
			<targetParameter name="defaultEncodingRule" value="customRule" />
			<targetParameter name="outputDirectory"
				value="testResults/sql/foreignKeyCheckingOptions/ddl_oracle" />
			<targetParameter name="outputFilename" value="ddl_oracle" />
			<!-- Do not use unlimited text, i.e. clob, because the currently used 
				syntax for check constraints won't work with that. https://stackoverflow.com/questions/18250014/querying-oracle-clob-column -->
			<!-- <targetParameter name="size" value="-1" /> -->
			<targetParameter name="srid" value="4979" />
			<targetParameter name="createReferences" value="true" />
			<targetParameter name="foreignKeyColumnSuffix" value="_fk" />
			<targetParameter name="dbOwner" value="dbo" />
			
			<targetParameter name="foreignKeyDeferrable" value="true"/>
			<targetParameter name="foreignKeyInitialConstraintMode" value="immediate"/>
			
			<rules>
				<EncodingRule name="customRule" extends="sql">
					<rule name="rule-sql-all-associativetables"/>
					<rule name="rule-sql-cls-data-types"/>
					<rule name="rule-sql-cls-object-types"/>
					<rule name="rule-sql-cls-code-lists"/>
					<rule name="rule-sql-cls-data-types-oneToMany-severalTables"/>
				</EncodingRule>
			</rules>
			<xi:include
				href="src/main/resources/config/StandardSqlMapEntries-Oracle.xml" />
		</Target>
		
		<Target class="de.interactive_instruments.ShapeChange.Target.SQL.SqlDdl"
			mode="enabled">
			<targetParameter name="databaseSystem" value="SQLite" />
			<targetParameter name="defaultEncodingRule" value="customRule" />
			<targetParameter name="outputDirectory"
				value="testResults/sql/foreignKeyCheckingOptions/sqlite" />
			<targetParameter name="outputFilename" value="ddl_sqlite" />
			<targetParameter name="srid" value="4979" />
			<targetParameter name="createReferences" value="true" />
			<targetParameter name="foreignKeyColumnSuffix" value="_fk" />
			
			<targetParameter name="foreignKeyDeferrable" value="true"/>
			<targetParameter name="foreignKeyInitialConstraintMode" value="deferred"/>
			
			<rules>
				<EncodingRule name="customRule" extends="sql">
					<rule name="rule-sql-all-associativetables"/>
					<rule name="rule-sql-cls-data-types"/>
					<rule name="rule-sql-cls-object-types"/>
					<rule name="rule-sql-cls-code-lists"/>
					<rule name="rule-sql-cls-data-types-oneToMany-severalTables"/>
				</EncodingRule>
			</rules>
			<xi:include
				href="src/main/resources/config/StandardSqlMapEntries-SQLite.xml" />
		</Target>
	</targets>
</ShapeChangeConfiguration>
