<?xml version="1.0" encoding="UTF-8"?>
<ShapeChangeConfiguration
	xmlns="http://www.interactive-instruments.de/ShapeChange/Configuration/1.1"
	xmlns:sc="http://www.interactive-instruments.de/ShapeChange/Configuration/1.1"
	xmlns:xi="http://www.w3.org/2001/XInclude" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.interactive-instruments.de/ShapeChange/Configuration/1.1 src/main/resources/schema/ShapeChangeConfiguration.xsd">
	<input id="INPUT">
		<parameter name="inputModelType" value="EA7" />
		<parameter name="inputFile"
			value="src/test/resources/sql/databaseModel_packageHierarchy/test_sql_databaseModel_packageHierarchy.EAP" />
		<parameter name="appSchemaNameRegex" value="AppSchema.*" />
		<parameter name="sortedSchemaOutput" value="true" />
		<xi:include href="src/main/resources/config/StandardAliases.xml" />
	</input>
	<log>
		<parameter name="reportLevel" value="INFO" />
		<parameter name="logFile"
			value="testResults/sql/databaseModel_packageHierarchy/multipleSchemas/log_sql.xml" />
	</log>
	<transformers>
		<Transformer
			class="de.interactive_instruments.ShapeChange.Transformation.Flattening.Flattener"
			input="INPUT" id="TRF_INHERITANCE" mode="enabled">
			<rules>
				<ProcessRuleSet name="flattener">
					<rule name="rule-trf-cls-flatten-inheritance" />
				</ProcessRuleSet>
			</rules>
		</Transformer>
	</transformers>
	<targets>
		<Target class="de.interactive_instruments.ShapeChange.Target.SQL.SqlDdl"
			inputs="TRF_INHERITANCE" mode="enabled">
			<targetParameter name="databaseSystem" value="PostgreSQL" />
			<targetParameter name="defaultEncodingRule" value="customRule" />
			<targetParameter name="outputDirectory"
				value="testResults/sql/databaseModel_packageHierarchy/multipleSchemas/eap" />
			<targetParameter name="outputFilename" value="dm_multipleSchemas" />
			<targetParameter name="size" value="-1" />
			<targetParameter name="srid" value="4979" />
			<targetParameter name="createReferences" value="true" />
			<targetParameter name="foreignKeyColumnSuffix" value="_fk" />
			<targetParameter name="foreignKeyColumnSuffixCodelist"
				value="_fk" />
			<targetParameter name="codeNameColumnName" value="code" />
			<targetParameter name="dbOwner" value="public" />
			<targetParameter name="deletePreExistingDataModelPackage"
				value="true" />
			<targetParameter name="dataModelEstablishPackageHierarchy"
				value="true" />
			<targetParameter name="eaAuthor" value="echterhoff"/>
			<rules>
				<EncodingRule name="customRule" extends="sql">
					<rule name="rule-sql-all-associativetables" />
					<rule name="rule-sql-all-exclude-abstract" />
					<rule name="rule-sql-all-precisionAndScale" />
					<rule name="rule-sql-cls-code-lists" />
					<rule name="rule-sql-cls-object-types" />
					<rule name="rule-sql-prop-check-constraints-for-enumerations" />
					<rule name="rule-sql-all-databaseModel" />
				</EncodingRule>
			</rules>
			<xi:include
				href="src/main/resources/config/StandardSqlMapEntries-PostgreSQL.xml" />
		</Target>
	</targets>
</ShapeChangeConfiguration>
