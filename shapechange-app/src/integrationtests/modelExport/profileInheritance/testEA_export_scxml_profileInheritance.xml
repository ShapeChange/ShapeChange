<?xml version="1.0" encoding="UTF-8"?>
<ShapeChangeConfiguration xmlns:xi="http://www.w3.org/2001/XInclude"
	xmlns="http://www.interactive-instruments.de/ShapeChange/Configuration/1.1"
	xmlns:sc="http://www.interactive-instruments.de/ShapeChange/Configuration/1.1"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.interactive-instruments.de/ShapeChange/Configuration/1.1 ../../../../sc-resources/schema/ShapeChangeConfiguration.xsd">
	<input>
		<parameter name="inputModelType" value="EA7" />
		<parameter name="inputFile"
			value="src/integrationtests/modelExport/profileInheritance/test_export_scxml_profileInheritance.qea" />
		<parameter name="appSchemaName" value="Test Schema" />
		<parameter name="publicOnly" value="true" />
		<parameter name="dontConstructAssociationNames" value="true" />
		<parameter name="extractSeparator" value="--" />
		<descriptorSources>
			<DescriptorSource descriptor="alias" source="ea:alias" />
			<DescriptorSource descriptor="dataCaptureStatement"
				source="none" />
			<DescriptorSource descriptor="definition" source="sc:extract"
				token="Definition" />
			<DescriptorSource descriptor="description" source="none" />
			<DescriptorSource descriptor="documentation" source="ea:notes" />
			<DescriptorSource descriptor="example" source="none" />
			<DescriptorSource descriptor="globalIdentifier"
				source="none" />
			<DescriptorSource descriptor="language" source="none" />
			<DescriptorSource descriptor="legalBasis" source="none" />
			<DescriptorSource descriptor="primaryCode" source="none" />
		</descriptorSources>
		<xi:include href="sc-resources/config/StandardAliases.xml" />
	</input>
	<log>
		<parameter name="reportLevel" value="INFO" />
		<parameter name="logFile"
			value="testResults/modelexport/profileInheritance/log_export_scxml.xml" />
	</log>
	<targets>
		<Target
			class="de.interactive_instruments.shapechange.core.target.modelexport.ModelExport"
			mode="enabled">
			<!-- Test profile conversion: Collect profiles from model (A,B,C,D,E,F) 
				and convert whole model -->
			<targetParameter name="outputDirectory"
				value="testResults/modelexport/profileInheritance/scxml" />
			<targetParameter name="outputFilename" value="export_full_omitProfilesTVs" />
			<targetParameter name="sortedOutput" value="true" />
			<targetParameter name="defaultEncodingRule" value="export1" />
			<targetParameter name="profilesInModelSetExplicitly"
				value="false" />
			<rules>
				<EncodingRule name="export1">
					<rule name="rule-exp-pkg-allPackagesAreEditable"/>
				</EncodingRule>
			</rules>
		</Target>
		<Target
			class="de.interactive_instruments.shapechange.core.target.modelexport.ModelExport"
			mode="enabled">
			<!-- Test profile conversion: Use configured profiles (A,C) and convert 
				only Test Schema (not the ISO Stub); T1_FeatureTypeA.attA2 receives profile 
				from its class and thus only A. -->
			<targetParameter name="outputDirectory"
				value="testResults/modelexport/profileInheritance/scxml" />
			<targetParameter name="outputFilename" value="export_restrictProfiles" />
			<targetParameter name="sortedOutput" value="true" />
			<targetParameter name="defaultEncodingRule" value="export2" />
			<targetParameter name="profilesInModelSetExplicitly"
				value="false" />
			<targetParameter
				name="profilesForClassesWithoutExplicitProfileAssignments" value="A,C" />
			<targetParameter name="profilesToExport" value="A,C" />
			<rules>
				<EncodingRule name="export2">
					<rule name="rule-exp-all-restrictExistingProfiles" />
					<rule name="rule-exp-pkg-allPackagesAreEditable"/>
				</EncodingRule>
			</rules>
		</Target>
		<Target
			class="de.interactive_instruments.shapechange.core.target.modelexport.ModelExport"
			mode="enabled">
			<!-- Test profile conversion: nothing specific since all profiles are 
				ignored during export. -->
			<targetParameter name="outputDirectory"
				value="testResults/modelexport/profileInheritance/scxml" />
			<targetParameter name="outputFilename"
				value="export_omitProfiles_removeProfilesTV" />
			<targetParameter name="sortedOutput" value="true" />
			<targetParameter name="defaultEncodingRule" value="export3" />
			<targetParameter name="profilesInModelSetExplicitly"
				value="false" />
			<rules>
				<EncodingRule name="export3">
					<rule name="rule-exp-all-omitExistingProfiles" />
					<rule name="rule-exp-pkg-allPackagesAreEditable"/>
				</EncodingRule>
			</rules>
		</Target>
	</targets>
</ShapeChangeConfiguration>
