  <MapEntry rule="*" type="GM_Curve" targetType="string" param="geometry{layer_gtype=line}"/>
  <MapEntry rule="*" type="GM_MultiCurve" targetType="string" param="geometry{layer_gtype=multiline}"/>
  <MapEntry rule="*" type="GM_Surface" targetType="string" param="geometry{layer_gtype=polygon}"/>
  <MapEntry rule="*" type="GM_MultiSurface" targetType="string" param="geometry{layer_gtype=multipolygon}"/>
  <MapEntry rule="*" type="GM_Object" targetType="string" param="geometry{layer_gtype=collection}"/>
