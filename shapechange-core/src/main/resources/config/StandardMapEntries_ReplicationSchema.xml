  <!-- targetType: an XML Schema simple type -->
  <!-- ISO/TS 19103 -->
  <MapEntry rule="*" type="CharacterString" targetType="string" param="textOrCharacterVarying"/>
  <MapEntry rule="*" type="URI" targetType="string" param="textOrCharacterVarying"/>
  <MapEntry rule="*" type="Boolean" targetType="boolean"/>
  <MapEntry rule="*" type="Integer" targetType="integer"/>
  <MapEntry rule="*" type="Decimal" targetType="double"/>
  <MapEntry rule="*" type="Number" targetType="double"/>
  <MapEntry rule="*" type="Real" targetType="double"/>
  <MapEntry rule="*" type="Measure" targetType="double"/>
